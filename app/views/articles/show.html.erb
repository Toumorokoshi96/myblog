<div class="Article" >
  <% @articles.each do |article| %>
    <div class = "article-title">
      <%= article.title %>
    </div>
    <div class = "author">
      <%= article.name%>
    </div>
      <div class = "text"><%= simple_format(article.text) %>
    </div>
    <% if user_signed_in? %>
      <%= link_to '編集・削除', "/articles/#{article.id}/edit"%>
    <% end %>
  <% end %>

  <footer>
    <%= link_to '一覧へ戻る', "/articles/index"%>
  </footer>
</div>